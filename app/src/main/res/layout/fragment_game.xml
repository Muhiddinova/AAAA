<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.example.tictoctie.GameFragment" />
    </data>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    tools:context=".GameFragment"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/linear_1"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_weight="2"
        app:layout_constraintBottom_toTopOf="@id/ll"
        android:orientation="horizontal"
        >
    <TextView
        android:text="@string/player1"
        android:layout_weight="1"
        android:background="@drawable/btn"
        android:id="@+id/tv_player_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="16sp"
        android:layout_margin="16dp"
        android:textColor="#fff"
        />
    <TextView
        android:text="@string/player2"
        android:gravity="center"
        android:textSize="16sp"
        android:layout_margin="16dp"
        android:layout_weight="1"
        android:background="@drawable/btn"
        android:id="@+id/tv_player_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="#fff"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="#00E0E0E0"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_weight="6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/linear_1"
        app:layout_constraintBottom_toTopOf="@id/linear_3">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_00"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@android:dimen/app_icon_size"
            android:textColor="#C3000000"
            android:textStyle="bold"
            tools:text="x" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#000" />

        <TextView
            android:id="@+id/tv_01"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@android:dimen/app_icon_size"
            android:textColor="#C3000000"
            android:textStyle="bold"
            tools:text="x" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#000" />

        <TextView
            android:id="@+id/tv_02"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#C3000000"
            android:textSize="@android:dimen/app_icon_size"
            android:textStyle="bold"
            tools:text="x" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#000" />

        <TextView
            android:id="@+id/tv_03"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textColor="#C3000000"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@android:dimen/app_icon_size"
            android:textStyle="bold"
            tools:text="x" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_10"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#C3000000"
            android:textSize="@android:dimen/app_icon_size"
            android:textStyle="bold"
            tools:text="x" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#000" />

        <TextView
            android:id="@+id/tv_11"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="48sp"
            android:textColor="#C3000000"
            android:textStyle="bold"
            tools:text="x" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#000" />

        <TextView
            android:id="@+id/tv_12"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@android:dimen/app_icon_size"
            android:textStyle="bold"
            android:textColor="#C3000000"
            tools:text="x" />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#000" />

        <TextView
            android:id="@+id/tv_13"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#C3000000"
            android:textSize="@android:dimen/app_icon_size"
            android:textStyle="bold"
            tools:text="x" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tv_20"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@android:dimen/app_icon_size"
            android:textStyle="bold"
            android:textColor="#C3000000"
            tools:text="x" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#000" />

        <TextView
            android:id="@+id/tv_21"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#C3000000"
            android:textSize="@android:dimen/app_icon_size"
            android:textStyle="bold"
            tools:text="x" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#000" />

        <TextView
            android:id="@+id/tv_22"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@android:dimen/app_icon_size"
            android:textStyle="bold"
            android:textColor="#C3000000"
            tools:text="x" />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#000" />

        <TextView
            android:id="@+id/tv_23"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@android:dimen/app_icon_size"
            android:textColor="#C3000000"
            android:textStyle="bold"
            tools:text="x" />
    </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/linear_3"
        app:layout_constraintTop_toBottomOf="@id/ll"

        >

    <Button
        android:id="@+id/btn_exit"
        android:layout_width="40dp"
        android:layout_height="80dp"
        android:layout_weight="1"
        android:layout_gravity="bottom"
        android:background="@drawable/btn"
        android:text="@string/exit"
        android:textColor="#fff"
         />

    <Button
        android:id="@+id/btn_new_game"
        android:layout_width="40dp"
        android:layout_height="80dp"
        android:layout_weight="1"
        android:layout_gravity="bottom"
        android:background="@drawable/btn"
        android:text="@string/new_game"
        android:textColor="#fff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn_exit"
        app:layout_constraintTop_toBottomOf="@id/ll" />
    </LinearLayout>

</LinearLayout></layout>