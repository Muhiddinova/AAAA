<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.tictoctie.InfoFragment">
    <TextView
        android:background="#27000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/info"
        android:textSize="24dp"
        android:textColor="#fff"
        android:id="@+id/tv_info"
        android:padding="8dp"
        android:layout_margin="16dp"
        />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animationView"
        app:layout_constraintTop_toBottomOf="@id/tv_info"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:lottie_rawRes="@raw/info"
        app:layout_constraintBottom_toTopOf="@+id/tv_info_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"/>
    <TextView
        android:textSize="25dp"
        android:gravity="center"
        android:text="Creator: Mukhiddinova Buzakhro "
        android:textColor="#fff"
        app:layout_constraintBottom_toTopOf="@+id/tv_username"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/animationView"
        android:id="@+id/tv_info_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:textSize="25dp"
        android:gravity="center"
        android:text=" t.me/@bmb717420"
        android:textColor="#fff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_info_name"
        android:id="@+id/tv_username"
        android:layout_width="match_parent"
        android:textStyle="italic"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>